# Clipboard settings
set selection-clipboard clipboard

# UI settings
set statusbar-h-padding 0
set statusbar-v-padding 0
set page-padding 1
set guioptions ""

# Window settings
set window-title-basename true

# Search settings
set incremental-search true

# Key mappings
map u scroll half-up
map d scroll half-down
map D toggle_page_mode
map r reload
map R rotate
map K zoom in
map J zoom out
map i recolor
map p print
map g goto top
map G goto bottom
map f fullscreen
map q quit
map [fullscreen] q quit
